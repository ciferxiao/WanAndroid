<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_8"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_110"
            android:layout_height="wrap_content"
            android:id="@+id/imageview"
            android:src="@drawable/textpic"
            android:paddingTop="@dimen/d_5"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_4"
            android:scaleType="fitCenter"
            android:contentDescription="null"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:drawableStart="@drawable/shape_head_blue"
            tools:text="一款WanAndroidApp MVP+Retrofit+RxJava+Glide+ARouter"
            android:textColor="@color/black_1"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_13"
            android:drawablePadding="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_5"
            app:layout_constraintLeft_toRightOf="@+id/imageview"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:id="@+id/detail"
            tools:text="Diycode 社区客户端，可以更方便的在手机上查看社区信息。应用采用了数据多级缓存，并且实现了离线浏览(访问过一次的页面会被缓存下来，没有网络也可查看)，相比于网页版，在一定程度上可以"
            android:textColor="@color/black"
            android:paddingStart="@dimen/d_8"
            android:paddingEnd="@dimen/d_8"
            android:ellipsize="end"
            android:maxLines="5"
            android:textSize="@dimen/sp_13"
            android:paddingTop="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/imageview"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/others"
            android:textColor="@color/black"
            android:paddingStart="@dimen/d_8"
            android:paddingEnd="@dimen/d_8"
            android:textSize="@dimen/sp_13"
            tools:text="2018-01-29    GcsSloop"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_90"
            app:layout_constraintLeft_toRightOf="@+id/imageview"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
