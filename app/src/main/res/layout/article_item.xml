<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_15"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author"
            android:drawableStart="@drawable/shape_head_blue"
            android:drawablePadding="@dimen/dp_3"
            android:text="xiaotest"
            android:paddingTop="@dimen/d_5"
            android:textColor="@color/black"
            android:paddingStart="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapter"
            android:text="玩android"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/d_5"
            android:textColor="@color/blue"
            android:layout_marginStart="@dimen/dp_150"
            android:layout_centerVertical="true"
            app:layout_constraintLeft_toRightOf="@+id/author"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chapter"
            android:layout_marginTop="@dimen/dp_15"
            android:text="使用策略模式优雅引用第三方框架"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingStart="@dimen/d_8"
            android:paddingEnd="@dimen/d_8"
            android:textSize="18sp"
            android:id="@+id/titleView"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like"
            android:contentDescription="@null"
            android:button="@drawable/like_icon_backgrond"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            android:text="（3）"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_15"
            tools:ignore="RtlSymmetry"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like_icon_backgrond"
            android:id="@+id/imageview"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/titleView"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:contentDescription="@null"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/d_5"
            android:text="2018-3-8 16.11"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/like"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            android:paddingBottom="@dimen/dp_5"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/titleView"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>